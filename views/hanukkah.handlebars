<div class="container">
    <div class="center">
        <h3>PTA Dues | Purim</h3>
        <h4>Please check the classes that your children have. For each class you check off, input your child's name.
        </h4>
    </div>
    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Early Childhood</h3>
        </div>
        <div class="card-body px-5">
            <div class="d-flex justify-content-between flex-wrap">
                {{#each earlyChildhood as |grade|}}
                <button class="btn card p-4 m-2" data-toggle="collapse" aria-expanded="false" data-target="#{{@key}}"
                    aria-controls="{{@key}}">{{@key}} &darr;</button>
                <div class="collapse border-bottom border-dark p-2 w-100" id="{{@key}}">
                    <ul class="list-group">
                        {{#each grade as |class|}}
                        <li class="list-group-item">
                            <strong class="mx-1">{{@key}}</strong>
                            {{#each class as |teacher|}}
                            <input type="checkbox" style="margin-left: 8px;">
                            {{teacher.Name}}
                            {{/each}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card-footer">
            <p>Teachers Selected: 0</p>
        </div>
    </div>

    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Middle School</h3>
        </div>
        <div class="card-body px-5">
            <div class="d-flex justify-content-between flex-wrap">
                {{#each middleSchool as |grade|}}
                <button class="btn card p-4 m-2" data-toggle="collapse" aria-expanded="false"
                    data-target="#middle-{{@key}}" aria-controls="middle-{{@key}}">{{@key}}th Grade &darr;</button>
                <div class="collapse border-bottom border-dark p-2 w-100" id="middle-{{@key}}">
                    {{#each grade as |class|}}
                    <p><strong>{{class.Grade}}</strong> <input type="checkbox"> {{class.Teacher.Name}}</p>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Elementary</h3>
        </div>
        <div class="card-body">
            <table class="classTable">
                <tr>
                    <th>Class</th>
                    <th>Room</th>
                    <th> </th>
                    <th>Teacher</th>
                    <th> </th>
                    <th>Associate/Assistant</th>
                    <th>Child's Name</th>
                </tr>
                {{#each elementary}}
                <tr>

                    <td>{{this.Class}}</td>
                    <td>{{this.Room}}</td>
                    <td><input type="checkbox" name="FacultyMembers/{{this.FirstRowTeachers.main.Id}}"></td>
                    <td>{{this.FirstRowTeachers.main.Name}}</td>
                    <td>{{#if this.FirstRowTeachers.assistant.Name}}<input type="checkbox"
                            name="FacultyMembers/{{this.FirstRowTeachers.assistant.Id}}">{{/if}}</td>
                    <td>{{this.FirstRowTeachers.assistant.Name}}</td>
                    <td><input type="text" name="Elementary/{{../ClassId}}/childName" class="childName"></td>
                </tr>
                {{#if this.ExtraTeachers}}
                {{#each this.ExtraTeachers}}
                <tr>
                    <td></td>
                    <td></td>
                    <td>{{#if this.main.Name}}<input type="checkbox" name="FacultyMembers/{{this.main.Id}}">{{/if}}</td>
                    <td>{{this.main.Name}}</td>
                    <td>{{#if this.assistant.Name}}<input type="checkbox"
                            name="FacultyMembers/{{this.assistant.Id}}">{{/if}}
                    </td>
                    <td>{{this.assistant.Name}}</td>
                    <td></td>
                </tr>
                {{/each}}
                {{/if}}
                {{/each}}
            </table>
        </div>
    </div>
