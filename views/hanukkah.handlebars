<div class="container">
    <div class="center">
        <h3>PTA Dues | Hanukkah</h3>
        <h4>Please check the classes that your children have. For each class you check off, input your child's name.
        </h4>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Early Childhood</h3>
        </div>
        <div class="card-body px-5">
            <div class="d-flex justify-content-between flex-wrap">
                <button class="btn card p-4 mx-2" data-toggle="collapse" aria-expanded="false" data-target="#PG"
                    aria-controls="PG">Playgroup &darr;</button>
                <button class="btn card p-4 mx-2" data-toggle="collapse" aria-expanded="false" data-target="#N"
                    aria-controls="N">Nursary &darr;</button>
                <button class="btn card p-4 mx-2" data-toggle="collapse" aria-expanded="false" data-target="#PK"
                    aria-controls="PK">Pre-Kindergarten &darr;</button>
                <button class="btn card p-4 mx-2" data-toggle="collapse" aria-expanded="false" data-target="#K"
                    aria-controls="K">Kindergarten &darr;</button>
            </div>
            {{#each nursaryGroups}}
            <div class="collapse" id="{{this.name}}">
                {{#each this.classes}}
                <p>{{this.Class}} {{this.TeacherName}}</p>
                {{/each}}
            </div>
            {{/each}}
            <div class="collapse" id="Playgroup">

            </div>
            <div class="collapse" id="Nursary">
                <h1>This is nursary!</h1>
            </div>
            <div class="collapse" id="Pre-Kindergarten">
                <h1>This is Pre-Kindergarten</h1>
            </div>
            <div class="collapse" id="Kindergarten">
                <h1>This is the real deal, this is Kindergarten.</h1>
            </div>
        </div>
        <div class="card-footer">
            <p>Teachers Selected: 0</p>
        </div>
    </div>

