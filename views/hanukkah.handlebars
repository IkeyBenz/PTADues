    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Early Childhood</h3>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs" role="tablist">
                {{#each earlyChildhood as |grade|}}
                <li class="nav-item">
                    <a class="nav-link text-dark{{#if grade.First}} active{{/if}}" id="{{@key}}-tab" data-toggle="tab"
                        href="#{{@key}}" role="tab" aria-controls="{{@key}}"
                        aria-selected="{{#if grade.First}}true{{else}}false{{/if}}">{{grade.gradeName}}</a>
                </li>
                {{/each}}
            </ul>
            <div class="tab-content">
                {{#each earlyChildhood as |grade|}}
                <div class="tab-pane fade{{#if grade.First}} show active{{/if}}" id="{{@key}}" role="tabpanel"
                    aria-labelledby="{{@key}}-tab">
                    <ul class="list-group">
                        {{#each grade.Classes as |class|}}
                        <li class="list-group-item">
                            <strong class="mx-1">{{@key}}</strong>
                            {{#each class as |teacher|}}
                            <input type="checkbox" style="margin-left: 8px;">
                            {{teacher.Name}}
                            {{/each}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
        </div>
    </div>


    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Middle School</h3>
        </div>
        <div class="card-body px-5">
            <ul class="nav nav-tabs" role="tablist">
                {{#each middleSchool as |grade|}}
                <li class="nav-item">
                    <a class="nav-link text-dark{{#if grade.First}} active{{/if}}" id="{{@key}}-tab" data-toggle="tab"
                        href="#M{{@key}}" role="tab" aria-controls="{{@key}}"
                        aria-selected="{{#if grade.First}}true{{else}}false{{/if}}">{{@key}}th Grade</a>
                </li>
                {{/each}}
            </ul>
            <div class="tab-content">
                {{#each middleSchool as |grade|}}
                <div class="tab-pane fade{{#if grade.First}} show active{{/if}}" id="M{{@key}}" role="tabpanel"
                    aria-labelledby="{{@key}}-tab">
                    <ul class="list-group">
                        {{#each grade.Classes as |class|}}
                        <li class="list-group-item">
                            <input type="checkbox" class="mx-2">
                            <strong>{{class.Teacher.Name}}</strong>
                            {{this.Subject}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="card my-2">
        <div class="card-header">
            <h3 class="card-title">Elementary</h3>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs" role="tablist">
                {{#each elementary as |grade|}}
                <li class="nav-item">
                    <a class="nav-link text-dark{{#if grade.First}} active{{/if}}" id="{{@key}}-tab" data-toggle="tab"
                        href="#E{{@key}}" role="tab" aria-controls="{{@key}}"
                        aria-selected="{{#if grade.First}}true{{else}}false{{/if}}">{{@key}} Grade</a>
                </li>
                {{/each}}
            </ul>
            <div class="tab-content">
                {{#each elementary as |grade|}}
                <div class="tab-pane fade{{#if grade.First}} show active{{/if}}" id="E{{@key}}" role="tabpanel"
                    aria-labelledby="{{@key}}-tab">
                    <table cellpadding="8">
                        <tr class="border-bottom-0 border-gray">
                            <th>Class</th>
                            <th>Room</th>
                            <th> </th>
                            <th>Teacher</th>
                            <th> </th>
                            <th>Associate/Assistant</th>
                            <th>Child's Name</th>
                        </tr>
                        {{#each grade.Classes}}
                        <tr class="border border-bottom-0 border-gray px-3">
                            <td>{{this.Class}}</td>
                            <td>{{this.Room}}</td>
                            <td><input type="checkbox" name="FacultyMembers/{{this.FirstRowTeachers.main.Id}}"></td>
                            <td>{{this.FirstRowTeachers.main.Name}}</td>
                            <td>{{#if this.FirstRowTeachers.assistant.Name}}<input type="checkbox"
                                    name="FacultyMembers/{{this.FirstRowTeachers.assistant.Id}}">{{/if}}</td>
                            <td>{{this.FirstRowTeachers.assistant.Name}}</td>
                            <td><input type="text" name="Elementary/{{../ClassId}}/childName"
                                    class="form-control childName"></td>
                        </tr>
                        {{#if this.ExtraTeachers}}
                        {{#each this.ExtraTeachers}}
                        <tr class="border-left border-right border-gray px-3">
                            <td></td>
                            <td></td>
                            <td>{{#if this.main.Name}}<input type="checkbox"
                                    name="FacultyMembers/{{this.main.Id}}">{{/if}}
                            </td>
                            <td>{{this.main.Name}}</td>
                            <td>{{#if this.assistant.Name}}<input type="checkbox"
                                    name="FacultyMembers/{{this.assistant.Id}}">{{/if}}
                            </td>
                            <td>{{this.assistant.Name}}</td>
                            <td></td>
                        </tr>
                        {{/each}}
                        {{/if}}
                        {{/each}}
                    </table>
                </div>
                {{/each}}
            </div>

        </div>
    </div>

    <script src="/js/hanukkah.js"></script>