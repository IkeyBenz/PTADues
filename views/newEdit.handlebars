<h2>Faculty Members:</h2>
<label class="d-inline">Amount: <input type="number" id="membersAmount" value="1"></label>
<button class="d-inline btn btn-primary" onclick="addMultipleMembers()">Add Multiple Members</button>
<h5 class="mt-2">Last Edited: {{lastEdited}}</h5>
<ul class="list-group mt-4">
    {{#each members}}
    <li class="list-group-item mb-3">
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text">Name:</span>
            </div>
            <input type="text" class="form-control memberInput" value="{{this.name}}" id="{{this.id}}/Name">
        </div>
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text">Info:</span>
            </div>
            <input type="text" class="form-control memberInput" value="{{this.info}}" id="{{this.id}}/Info">
        </div>
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text">Amount:</span>
            </div>
            <input type="text" class="form-control memberInput" value="{{this.gift_amount}}"
                id="{{this.id}}/gift_amount">
        </div>
        <button class="btn btn-danger" onclick="remove('{{this.id}}')">X</button>
    </li>
    {{/each}}
    <button class="btn btn-primary" onclick="addMember()">Add Member</button>
</ul>


<script src="/js/editMembers.js"></script>
<link rel="stylesheet" href="/css/editTeachers.css">