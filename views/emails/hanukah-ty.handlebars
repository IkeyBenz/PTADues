<body style="max-width:1080px;display:block;margin:0 auto;font-family:Arial,Helvetica,sans-serif;">
	<header style="width:100%;height:100px;background-color:#01389D"></header>
	<main style="padding:16px;background-color:#AFDEFB;min-height:calc(100% - 100px);">

		<h1 style="text-align:center;">Thank you!</h1>

		<h3 style="margin-top:16px">Dear {{parentsName}}, we've recieved your Hanukah gifts on behalf of your children {{#each gifts}}, {{@key}}{{/each}}.</h3>

		<table>
			<caption>Breakdown:</caption>
			<tr><th>Child</th><th>Gifted</th></tr>
			{{#each gifts}}
			<tr><td>{{@key}}</td><td>{{#each this}}{{this}}, {{/each}}</td></tr>
			{{/each}}
		</table>
		
		<label for="">Parents Name: {{parentsName}}</label>
		<label for="">amount: {{amount}}</label>
		<label for="">orderID {{prderId}}</label>
		<label for="">Timestamp: {{timestamp}}</label>
		{{#each gifts}}
		<label for="">{{@key}} gifted {{#each this}}, {{this}}{{/each}}.</label>
		{{/each}}
	</main>
</body>